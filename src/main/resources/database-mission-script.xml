<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

  <changeSet id="1" author="me">

    <createTable tableName="MISSIONS_STATUS">
      <column name="MST_ID" type="INT" autoIncrement="true"><constraints primaryKey="true" nullable="false"/></column>
      <column name="MIS_ID" type="INT"/>
      <column name="PLY_ID" type="SMALLINT" />
      <column name="STATUS" type="TINYINT" defaultValueNumeric="0"/>
    </createTable>

    <createTable tableName="TASKS_STATUS">
      <column name="TST_ID" type="INT" autoIncrement="true"><constraints primaryKey="true" nullable="false"/></column>
      <column name="TSK_ID" type="INT" />
      <column name="PLY_ID" type="SMALLINT" />
      <column name="MIS_ID" type="INT" />
      <column name="STATUS" type="VARCHAR(255)" />
    </createTable>
  </changeSet>

</databaseChangeLog>
